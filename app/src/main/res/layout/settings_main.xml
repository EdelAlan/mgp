<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ip_setting_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:text="..."
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/choose2_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/video_name2"
        android:layout_below="@+id/video_name1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/video_name3"
        android:layout_below="@+id/video_name2"
        android:layout_alignLeft="@+id/video_name2"
        android:layout_alignStart="@+id/video_name2"
        android:layout_toStartOf="@+id/choose1_btn"
        android:layout_toLeftOf="@+id/choose1_btn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/video_name4"
        android:layout_below="@+id/video_name3"
        android:layout_alignLeft="@+id/video_name3"
        android:layout_alignStart="@+id/video_name3"
        android:layout_alignRight="@+id/video_name3"
        android:layout_alignEnd="@+id/video_name3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ip_address"
        android:layout_below="@+id/video_name4"
        android:layout_alignLeft="@+id/video_name4"
        android:layout_alignStart="@+id/video_name4"
        android:layout_alignRight="@+id/video_name4"
        android:layout_alignEnd="@+id/video_name4" />

    <Button
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose3_btn"
        android:layout_below="@+id/video_name2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/video_name2"
        android:layout_toEndOf="@+id/video_name2" />

    <Button
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choose4_btn"
        android:layout_below="@+id/video_name3"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/video_name3"
        android:layout_toEndOf="@+id/video_name3" />

    <TextView
        android:text="Video 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/choose1_btn"
        android:layout_above="@+id/choose2_btn"
        android:textSize="20sp" />

    <TextView
        android:text="Video 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/video_name2"
        android:id="@+id/textView4"
        android:layout_above="@+id/choose3_btn"
        android:layout_toLeftOf="@+id/video_name2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <TextView
        android:text="Video 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_toLeftOf="@+id/video_name3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/video_name2"
        android:layout_above="@+id/choose4_btn"
        android:textSize="20sp" />

    <TextView
        android:text="Video 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_toLeftOf="@+id/video_name4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/video_name4"
        android:layout_below="@+id/video_name3"
        android:textSize="20sp" />

    <TextView
        android:text="URL Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/ip_address"
        android:layout_toStartOf="@+id/video_name4"
        android:textSize="20sp"
        android:layout_toLeftOf="@+id/video_name4" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/video_name1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/choose1_btn"
        android:layout_marginLeft="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/video_name2"
        android:layout_below="@+id/video_name1"
        android:layout_toLeftOf="@+id/choose1_btn"
        android:layout_alignLeft="@+id/video_name1"
        android:layout_alignStart="@+id/video_name1" />

    <Button
        android:text="..."
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/choose1_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/save_button"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>

